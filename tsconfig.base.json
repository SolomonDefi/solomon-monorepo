{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["libs/web/ui-assets/src/*"],
      "@solomon/shared/service-logger": ["libs/shared/service-logger/src/index.ts"],
      "@solomon/shared/store-env": ["libs/shared/store-env/src/index.ts"],
      "@solomon/shared/store-path": ["libs/shared/store-path/src/index.ts"],
      "@solomon/api/feature-app": ["libs/api/feature-app/src/index.ts"],
      "@solomon/apps/blockchain-watcher": ["apps/blockchain-watcher/src"],
      "@solomon/apps/developer-docs": ["apps/developer-docs/src"],
      "@solomon/backend/service-db": ["libs/backend/service-db/src/index.ts"],
      "@solomon/blockchain-watcher/feature-app": [
        "libs/blockchain-watcher/feature-app/src/index.ts"
      ],
      "@solomon/blockchain-watcher/feature-template": [
        "libs/blockchain-watcher/feature-template/src/index.ts"
      ],
      "@solomon/shared/util-api-evidence-types": [
        "libs/shared/util-api-evidence-types/src/index.ts"
      ],
      "@solomon/shared/util-contract": ["libs/shared/util-contract/src/index.ts"],
      "@solomon/shared/util-core": ["libs/shared/util-core/src/index.ts"],
      "@solomon/shared/util-event": ["libs/shared/util-event/src/index.ts"],
      "@solomon/shared/util-i18n": ["libs/shared/util-i18n/src/index.ts"],
      "@solomon/shared/util-logger": ["libs/shared/util-logger/src/index.ts"],
      "@solomon/web/data-access-api": ["libs/web/data-access-api/src/index.ts"],
      "@solomon/web/data-access-state": ["libs/web/data-access-state/src/index.ts"],
      "@solomon/web/ui-theme": ["libs/web/ui-theme/src"],
      "@solomon/web/ui-widgets": ["libs/web/ui-widgets/src/index.ts"],
      "@solomon/web/util-validate": ["libs/web/util-validate/src/index.ts"],
      "@solomon/web/util-vite-config": ["libs/web/util-vite-config/src/index.ts"],
      "@ui-assets/*": ["libs/web/ui-assets/src/*"]
    }
  },
  "include": ["json-schema-to-typescript.d.ts"],
  "exclude": ["node_modules", "tmp"]
}
