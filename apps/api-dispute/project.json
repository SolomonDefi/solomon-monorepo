{
  "root": "apps/api-dispute",
  "projectType": "application",
  "sourceRoot": "apps/api-dispute/src",
  "targets": {
    "serve": {
      "executor": "nx-python-fastapi:serve",
      "options": {
        "host": "0.0.0.0",
        "port": 3000
      }
    },
    "test": {
      "executor": "nx-python-fastapi:test",
      "outputs": ["coverage/apps/api-dispute"]
    },
    "lint": {
      "executor": "nx-python-fastapi:lint"
    },
    "format": {
      "executor": "nx-python-fastapi:format"
    },
    "generate-event-schema": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "poetry install",
          "poetry run python src/extract_schema.py -f ../../libs/shared/util-event/schema/event.schema.json"
        ],
        "cwd": "apps/api-dispute",
        "parallel": false
      }
    }
  },
  "tags": ["scope:api", "type:app"]
}
